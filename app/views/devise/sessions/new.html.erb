<div class="wrapper">
  <div class="page-header" style="background-image: url(<%= asset_path 'login-image.jpg' %>);">
    <div class="filter"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-4 offset-lg-4 col-sm-6 offset-sm-3">
          <div class="card card-register">
            <h3 class="title">Welcome Back</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'register-form'}) do |f| %>
            <%= f.label "Enter Email or username" %><br/>
            <%= f.text_field :login, autofocus: true, class:'form-control', placeholder:'Eg bob@safaricom.co.ke or bob' %>

            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:"Password" %>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <%= f.submit "Log in" ,class:"btn btn-danger btn-block btn-round"%>
            <% end %>

            <div class="forgot">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class:'btn btn-link btn-danger' %>
              <%= link_to "Wanna Sign up Instead", new_registration_path(resource_name), class:'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
      <div class="footer register-footer text-center">
        <h6>&copy;
          2017, made with
          <i class="fa fa-heart heart"></i>
          by <a target="_blank" href="http://instagram.com/c_h_____">bigzoo</a></h6>
      </div>
    </div>
  </div>
</div>
