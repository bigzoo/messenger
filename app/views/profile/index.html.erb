<% content_for(:title) do%>Private Messenger | <%=@user.username%><% end%>
<% content_for(:description) do%>Send <%=@user.username%> a Private Message Today!<%end%>
<% content_for(:metas) do%>
<!-- Twitter Card data -->
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="Private Messenger">
<meta name="twitter:title" content="Private Messenger | <%=@user.username%>">
<meta name="twitter:description" content="Send <%= @user.username%> a Private Message Today!">
<meta name="twitter:creator" content="Private Messenger">
<meta name="twitter:image" content="<%= asset_path 'private.jpg' %>">

<!-- Open Graph data -->
<meta property="og:title" content="Private Messenger | <%=@user.username%>" />
<meta property="og:type" content="article" />
<meta property="og:image" content="<%= asset_path 'private.jpg' %>" />
<meta property="og:description" content="Send <%= @user.username%> a Private Message Today!" />
<meta property="og:site_name" content="Private Messenger" />
<%end%>
<div class="wrapper">
  <div class="filter"></div>
</div>
<div class="section profile-content">
  <div class="container">
    <div class="owner">
      <div class="name">
        <h4 class="title">Anonymous User<br/></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
        <br/>
        <%= link_to ("<i class='fa fa-cog'></i>Settings").html_safe, edit_user_registration_path, class:'btn btn-outline-default btn-round'%>
      </div>
    </div>
    <br/>
    <div class="nav-tabs-navigation">
      <div class="nav-tabs-wrapper">
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#recieved" role="tab">Recieved</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#sent" role="tab">Sent</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#favorites" role="tab">Favorites</a>
          </li>
        </ul>
      </div>
    </div>
    <!-- Tab panes -->
    <div class="tab-content following">
      <div class="tab-pane active" id="recieved" role="tabpanel">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <ul class="list-unstyled follows">
              <%if @user.messages.any?%>
              <% @user.messages.order('id ASC').reorder('created_at DESC').each do |message|%>
              <li>
                <div class="row">
                  <div class="col-md-7 col-xs-4">
                    <h6><%= message.message%><br/>
                      <small>Hint: ...
                      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Age: <%= distance_of_time_in_words(message.created_at, DateTime.current)%></small>
                    </h6>
                  </div>
                </div>
              </li>
              <hr/>
              <% end %>
              <% @user.messages.each %>
            <% else %>
              <h3 class="text-muted">No Messages yet :(</h3>
              <a href="#">Share this link</a>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="tab-pane text-center" id="sent" role="tabpanel">
        <h3 class="text-muted">Not following anyone yet :(</h3>
        <button class="btn btn-warning btn-round">Find Sent</button>
      </div>
      <div class="tab-pane text-center" id="favorites" role="tabpanel">
        <h3 class="text-muted">Not following anyone yet :(</h3>
        <button class="btn btn-warning btn-round">Find Fav</button>
      </div>
    </div>
  </div>
</div>
